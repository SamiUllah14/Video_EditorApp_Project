@page "/ImageView"

<!DOCTYPE html>
<html>
<head>
    <title>Image Cards</title>
    <style>
        .container {
            display: flex;
        }

        .card {
            width: 9rem;
            margin: 10px;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            text-align: center;
        }

            .card img {
                width: 100%;
                height: 70%;
            }

        .btn {
            background-color: #3498db;
            border: none;
            color: white;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card" card-1>
            <img class="card-img-top" src="/Images/sami.jpg" alt="Card image cap">
            <div class="card-body">
                <button type="button" class="btn btn-primary btn-sm">Sami</button>
            </div>
        </div>
        <div class="card" card-2>
            <!-- Add content for card 2 -->
